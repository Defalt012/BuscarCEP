<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCEP.NuGetPage"
             BackgroundImage="fundo">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo"
                   Margin="10"
                   WidthRequest="200"
                   HeightRequest="100"/>
            <Entry x:Name="entryNuGetCEP"
                   Placeholder="Dígite um CEP"
                   HorizontalTextAlignment="Center"
                   Margin="10"
                   Keyboard="Numeric"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Limpar"
                    BackgroundColor="#21557c"
                    HorizontalOptions="FillAndExpand"
                    Margin="5,0,5,0"
                    x:Name="buttonNuGetLimpar"
                    BorderRadius="8"/>
                <Button Text="Buscar"
                    BackgroundColor="#21557c"
                    HorizontalOptions="FillAndExpand"
                    Margin="5,0,5,0"
                    x:Name="buttonNuGetBuscar"
                    BorderRadius="8"
                    Clicked="ButtonNuGetBuscar_Clicked"/>
                </StackLayout>
            
            <Label x:Name="labelResultadoNuGet"
             TextColor="White"/>
                   
                </StackLayout>
    </ContentPage.Content>
</ContentPage>